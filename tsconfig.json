{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./build"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
